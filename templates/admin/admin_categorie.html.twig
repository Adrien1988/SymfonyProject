{% extends "base.html.twig" %}

{% block title %}Gestion des catégories
{% endblock %}

{% block body %}

{% for message in app.flashes('success') %}
    <div class="text-center alert alert-success">
      {{ message }}
    </div>
{% endfor %}

<a href="{{ path('admin_new_categorie') }}" class="btn btn-success mb-3">Ajouter une Catégorie</a>

	<table class="table table-bordered text-center">

		<thead>
			<tr>
				{% for colonne in colonnes %}
					<th>{{ colonne }}</th>
				{% endfor %}
				<th>Editer</th>
				<th>Supprimer</th>
			</tr>
		</thead>

		<tbody>
			{% for data in categorie %}
				<tr>
					<td>{{ data.id }}</td>
					<td>{{ data.titre }}</td>
					<td>
						<a href="{{ path('admin_edit_categorie', {'id': data.id}) }}" class="btn btn-warning text-dark">
							<i class="fa fa-edit"></i>
						</a>
					</td>
					<td>
						<a href="{{ path('delete_categorie', {'id': data.id}) }}" class="btn btn-danger text-dark">
							<i class="fas fa-trash-alt"></i>
						</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>

	</table>

  <a href="{{ path('app_admin') }}" class="btn btn-primary"><i class="fas fa-chevron-circle-left"></i>Retour</a>


{% endblock %}

{% extends "base.html.twig" %}

{% block title %}BACKOFFICE | Utilisateurs
{% endblock %}

{% block body %}

	{% for msg in app.flashes('error') %}
		<div class="alert alert-danger text-center my-2">
			{{ msg }}
		</div>
	{% endfor %}

	<h1 class="display-4 text-center my-4">
		{% if editMode %}
			BACKOFFICE | Edition de l'utilisateur
		{% else %}
			BACKOFFICE | Création d'un utilisateur
		{% endif %}

	</h1>

	<div class="container">
		{{ form_start(formUser) }}

		<div class="form-group">{{ form_row(formUser.email, {'attr':{'class':'form-control mb-2'}}) }}</div>
		<div class="form-group">{{ form_row(formUser.plainPassword, {'attr':{'class':'form-control mb-2'}}
			) }}</div>
		<div class="form-group">{{ form_row(formUser.username, {'attr':{'class':'form-control mb-2'}}) }}</div>
		<div class="form-group">{{ form_row(formUser.roles, {'attr':{'class':'form-control mb-2'}}) }}</div>

		<button type="submit" class="btn btn-primary mt-2">

			{% if editMode %}
				Enregistrer les modifications
			{% else %}
				Créer l'utilisateur
			{% endif %}

		</button>

		{{ form_end(formUser) }}
	</div>
{% endblock %}

{% extends "base.html.twig" %}

{% block title %}BACKOFFICE | Commentaires
{% endblock %}

{% block body %}

	<h1 class="display-4 text-center my-4">
		{% if editMode %}
			BACKOFFICE | Edition du commentaire
		{% else %}
			BACKOFFICE | Création d'un commentaire
		{% endif %}

	</h1>

	<div class="container">

		{{ form_start(formCommentaire) }}

		<div class="form-group">
			{{ form_label(formCommentaire.contenu, 'Contenu') }}
			{{ form_widget(formCommentaire.contenu, {'attr':{'class':'form-control mb-2'}}) }}
			{{ form_errors(formCommentaire.contenu) }}
		</div>
		<div class="form-group">
			{{ form_label(formCommentaire.auteur, 'Auteur') }}
			{{ form_widget(formCommentaire.auteur, {'attr':{'class':'form-control mb-2'}}
			) }}
			{{ form_errors(formCommentaire.auteur) }}
		</div>
		<div class="form-group">
			{{ form_row(formCommentaire.produit, {'attr':{'class':'form-control mb-2'}} ) }}
		</div>

		<button type="submit" class="btn btn-primary mt-2">

			{% if editMode %}
				Enregistrer les modifications
			{% else %}
				Créer le commentaire
			{% endif %}

		</button>

		{{ form_end(formCommentaire) }}

	</div>

{% endblock %}
